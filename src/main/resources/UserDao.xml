<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.net.wangshifu.dao.UserDao">
    <select id="getUser" parameterType="cn.net.wangshifu.model.User" resultType="cn.net.wangshifu.model.User">
        SELECT * FROM user WHERE nickname=#{nickname} AND password_sha1_nickname=#{password}
    </select>
    <insert id="addUser" parameterType="cn.net.wangshifu.model.User" flushCache="true">
        call user_adder(#{nickname},#{password})
    </insert>
    <update id="updateUser" parameterType="cn.net.wangshifu.model.User">
        UPDATE user SET password_sha1_nickname=#{password} WHERE id=#{id}
    </update>
    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE id=#{id}
    </delete>
</mapper>